h1 {{mode | uppercase}}
.row
  .small-12.columns
    form
      .row
        .small-6.columns
          label(for='email') Email
          input#name(type='text', name='email', ng-model='user.email', autofocus)
        .small-6.columns
      .row(ng-hide='!register')
        .small-6.columns
          label(for='name') Username
          input#name(type='text', name='name', ng-model='user.name', autofocus)
        .small-6.columns
      .row
        .small-6.columns
          label(for='password') Password
          input#password(type='password', name='password', ng-model='user.password')
        .small-6.columns
    .row
      .small-6.columns
        button(ng-click='submit()') Submit
      .small-6.columns
